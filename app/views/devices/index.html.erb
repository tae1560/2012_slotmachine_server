<h1>All Devices</h1>

<table style="text-align: center;">
  <thead>
  <tr>
    <th>번호</th>
    <th>매장ID</th>
    <th>업데이트 시작시간</th>
    <th>업데이트 종료시간</th>
    <th>업데이트 필요여부</th>
    <th>정보보기</th>
  </tr>
  </thead>
  <% @devices.each do |device| %>
      <tr>
        <td><%=device.id%></td>
        <td><%=device.device_id%></td>
        <td><%=device.update_start_date%></td>
        <td><%=device.update_end_date%></td>
        <td><%=device.need_update%></td>
        <td><%= link_to "정보보기", device %></td>
      </tr>
  <% end %>
</table>